    public void setItem(){
    this.item = choices.getSelectedItem().toString();
    
    }
    public void setPrice(Double param_price){
    this.price = param_price;    
    }
    
    public void definePrice(String param_item){
        
        switch (param_item){
            case "Hotdog":
                setPrice(20d);
                break;
            case "Cheese Dog":
                setPrice(30d);
                break;
            case "Longgadog":
                setPrice(24d);
                break;
            case "Buldog":
                setPrice(25d);
                break;
            default:
                setPrice(0d);
                break;
    }
     
        
    }
    
    public void setCash(){
    this.cash = Double.parseDouble(mycash.getText());
    }
    
    public void setChange(){
    this.change = getCash() - getPrice();
    }
    
    public String getItem(){
    return this.item;
    }
    
    public Double getPrice(){
    return this.price;
    }
    
    public Double getCash(){
    return this.cash;
    }
    
    public Double getChange(){
    return this.change;
    }
    
    public void allin(){
        showi.setText(getItem());
        showp.setText(getPrice().toString());
        mycash.setText(getCash().toString());
        sukli.setText(getChange().toString());
    }
    
    private void choicesActionPerformed(java.awt.event.ActionEvent evt) {                                        
        setItem();
        setPrice(getPrice());
        definePrice(getItem());
        
        showi.setText(item);
        showp.setText(price.toString());
        
    }                                       

    private void mycashKeyReleased(java.awt.event.KeyEvent evt) {                                   
        setItem();
        setPrice(getPrice());
        definePrice(getItem());
        setCash();
        setChange();
        
        if("".equals(vall)){
        sukli.setText("");
    }
        else{
                vall = Double.parseDouble(mycash.getText());
                change = vall - getPrice();
                sukli.setText(change.toString());
                }   
    }                                  

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        setItem();
        setPrice(getPrice());
        definePrice(getItem());
        setCash();
        setChange();
        
        price = getPrice();
        cash = getCash();
        item = getItem();
        
        if(cash < price || "[none]".equals(item)){
        tambok1.setVisible(false);
        tambok.setVisible(true);
        }
        
        else if(cash > price || !"[none".equals(item)){
        allin();
        tambok1.setVisible(true);
        tambok.setVisible(false);
        }
        else{
        }
    }                                        
public void getdialog(){
    dia1.setText(getItem());
    dia2.setText(getPrice().toString());
    dia3.setText(getCash().toString());
    dia4.setText(getChange().toString());
            
}
